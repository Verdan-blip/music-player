<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <style name="CoverCard" parent="@style/CardView">
        <item name="cardCornerRadius">@dimen/poster_card_corner_radius</item>
        <item name="android:layout_width">@dimen/poster_card_width</item>
        <item name="android:layout_height">@dimen/poster_card_height</item>
    </style>

    <style name="ThinTextView" parent="@style/Widget.AppCompat.TextView">
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

    <style name="LightTextView" parent="@style/Widget.AppCompat.TextView">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="AppCard" parent="@style/CardView">
        <item name="android:backgroundTint">@color/surface</item>
        <item name="android:elevation">0dp</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="AppButton" parent="@style/Widget.AppCompat.Button">
        <item name="android:background">@drawable/app_button_background</item>
    </style>

    <style name="SmallSquareCard" parent="@style/AppCard">
        <item name="android:layout_width">@dimen/small_square_card_width</item>
        <item name="android:layout_height">@dimen/small_square_card_height</item>
        <item name="cardCornerRadius">@dimen/small_square_card_corner_radius</item>
    </style>

    <style name="MediumSquareCard" parent="@style/AppCard">
        <item name="android:layout_width">@dimen/medium_square_card_width</item>
        <item name="android:layout_height">@dimen/medium_square_card_height</item>
        <item name="cardCornerRadius">@dimen/medium_square_card_corner_radius</item>
    </style>

    <style name="LargeSquareCard" parent="@style/AppCard">
        <item name="android:layout_width">@dimen/large_square_card_width</item>
        <item name="android:layout_height">@dimen/large_square_card_height</item>
        <item name="cardCornerRadius">@dimen/large_square_card_corner_radius</item>
    </style>

    <style name="ExtraLargeSquareCard" parent="@style/AppCard">
        <item name="android:layout_width">@dimen/extra_large_square_card_width</item>
        <item name="android:layout_height">@dimen/extra_large_square_card_height</item>
        <item name="cardCornerRadius">@dimen/extra_large_square_card_corner_radius</item>
    </style>

    <style name="PlayingProgressSeekBar" parent="@style/Widget.AppCompat.SeekBar">
        <item name="android:thumb">@drawable/playing_progress_thumb</item>
        <item name="android:progressTint">@color/light_playing_progress_color</item>
        <item name="android:progressBackgroundTint">@color/light_playing_progress_background_color</item>
        <item name="android:layout_marginStart">@dimen/playing_seekbar_fixing_margin_start</item>
    </style>

    <style name="AppLightEditText" parent="@style/Widget.AppCompat.EditText">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/light_text_primary_color</item>
        <item name="android:textColorHint">@color/light_text_secondary_color</item>
        <item name="fontFamily">sans-serif-light</item>
    </style>

    <style name="AppThinEditText" parent="@style/Widget.AppCompat.EditText">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/light_text_primary_color</item>
        <item name="android:textColorHint">@color/light_text_secondary_color</item>
        <item name="fontFamily">sans-serif-thin</item>
    </style>
    
</resources>