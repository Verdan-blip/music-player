<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:backgroundTint="@color/surface"
    app:cardCornerRadius="@dimen/medium_square_card_corner_radius"
    app:contentPadding="@dimen/normal_square_card_padding"
    style="@style/AppNormalSquareCard"
    tools:backgroundTint="@color/cardview_dark_background">

    <ImageView
        android:id="@+id/iv_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:src="@drawable/add_author" />

</androidx.cardview.widget.CardView>