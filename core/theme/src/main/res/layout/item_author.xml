<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/normal_square_card_width"
    android:layout_height="@dimen/normal_square_card_height"
    app:contentPadding="@dimen/normal_square_card_padding"
    app:cardCornerRadius="@dimen/normal_square_card_corner_radius"
    style="@style/AppCard">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/normal_square_card_corner_radius"
        style="@style/AppCard">

        <ImageView
            android:id="@+id/iv_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            tools:src="@drawable/small_cover_example" />

    </androidx.cardview.widget.CardView>

</androidx.cardview.widget.CardView>