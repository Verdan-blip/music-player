<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppCardView">
        <item name="cardBackgroundColor">@color/surface</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="AppTextView" parent="@style/Widget.AppCompat.TextView">
        <item name="fontFamily">sans-serif-light</item>
    </style>

    <style name="AppSeekBar" parent="@style/Widget.AppCompat.SeekBar">
        <item name="android:thumb">@drawable/music_seekbar_thumb</item>
        <item name="android:progressTint">@color/seekbar_playing_progress_color_light</item>
        <item name="android:progressBackgroundTint">@color/seekbar_playing_progress_bg_color_light</item>
    </style>

    <style name="AppEditText" parent="@style/Widget.AppCompat.EditText">
        <item name="android:background">@drawable/et_background</item>
        <item name="android:textColor">@color/primary_text_light</item>
        <item name="android:textColorHint">@color/secondary_text_light</item>
        <item name="fontFamily">sans-serif-light</item>
    </style>

    <style name="AppEditTextSearch" parent="@style/Widget.AppCompat.EditText">
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">@color/primary_text_light</item>
        <item name="android:textColorHint">@color/secondary_text_light</item>
        <item name="fontFamily">sans-serif-light</item>
    </style>

</resources>