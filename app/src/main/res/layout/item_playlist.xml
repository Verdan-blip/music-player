<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/playlist_card_width"
    android:layout_height="@dimen/playlist_card_height"
    app:cardCornerRadius="@dimen/playlist_card_corner_radius"
    style="@style/AppCardView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/playlist_card_padding"
        android:gravity="center">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/playlist_card_corner_radius"
            style="@style/AppCardView">

            <ImageView
                android:layout_width="@dimen/playlist_cover_width"
                android:layout_height="@dimen/playlist_cover_height"
                tools:src="@drawable/music_icon_small"
                android:scaleType="fitXY" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/playlist_title_text_margin_top"
            android:gravity="center"
            android:textColor="@color/secondary_text_light"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="@dimen/playlist_title_text"
            style="@style/AppTextView"
            tools:text="Название плейлиста" />

    </LinearLayout>

</androidx.cardview.widget.CardView>