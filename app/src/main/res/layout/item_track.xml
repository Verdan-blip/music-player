<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/AppCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/music_item_card_corner_radius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/music_item_card_padding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/music_item_card_corner_radius">

                <ImageView
                    android:id="@+id/iv_music_small_icon"
                    android:layout_gravity="center"
                    android:layout_width="@dimen/music_item_cover_width"
                    android:layout_height="@dimen/music_item_cover_height"
                    tools:src="@drawable/music_icon_small" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="start|center"
                android:layout_marginStart="@dimen/music_item_info_margin_left"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/AppTextView"
                    android:textSize="@dimen/music_item_title_text"
                    android:textColor="@color/primary_text_light"
                    tools:text="Название песни" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/AppTextView"
                    android:textSize="@dimen/music_item_authors_text"
                    android:layout_marginTop="@dimen/music_item_authors_margin_top"
                    android:textColor="@color/primary_text_light"
                    tools:text="Авторы песни" />

            </LinearLayout>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:tint="@color/on_surface_light"
                android:backgroundTint="@android:color/transparent"
                android:src="@drawable/music_item_more" />

        </LinearLayout>

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/music_playing_seekbar_margin_top"
            android:layout_marginBottom="@dimen/music_playing_seekbar_margin_bottom"
            tools:progress="20"
            android:visibility="gone" />


    </LinearLayout>

</androidx.cardview.widget.CardView>